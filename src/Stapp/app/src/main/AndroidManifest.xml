<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stapp">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".database.ContextHelper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.JoinCourseActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ProfessorMenu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CreateClass"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.StudentMenu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CourseDisplay"
            android:label="@string/title_activity_course"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.ShowOldAssignments"
            android:label="@string/title_activity_show_old_assignments"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.CreateNewAssignment"
            android:label="@string/title_activity_create_new_assignment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.StudentCourseDisplay"
            android:label="@string/title_activity_student_course_display"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.AnswerAssignmentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AssignmentResultsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AddQuestionsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.StudentInfoActivity"/>
        <activity android:name=".activities.AdminMenu">
        </activity>
    </application>

</manifest>