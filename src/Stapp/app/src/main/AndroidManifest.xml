<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stapp">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".database.ContextHelper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.ProfessorMenu" />
        <activity android:name=".activities.CreateClass" />
        <activity android:name=".activities.StudentMenu" />
        <activity
            android:name=".activities.CourseDisplay"
            android:label="@string/title_activity_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ShowOldAssignments"
            android:label="@string/title_activity_show_old_assignments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CreateNewAssignment"
            android:label="@string/title_activity_create_new_assignment"
            android:theme="@style/AppTheme.NoActionBar" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".StudentAssignment"
            android:label="@string/title_activity_student_assignment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StudentCourseDisplay"
            android:label="@string/title_activity_student_course_display"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>