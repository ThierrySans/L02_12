<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stapp.activities.ProfessorMenu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="447dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp">

        <Button
            android:id="@+id/ProfMenuButtonCreateClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="createClassActivity"
            android:text="@string/create_new_class"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/my_classes" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/prof_course_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
